!!! 5
%html
  %head
    %title= t("app.title")
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.navbar.navbar-static-top.navbar-inverse
      %nav.container
        .navbar-header
          = link_to t("app.title"), root_path, class: "navbar-brand"
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to t("title.register_plan"), new_plan_path
            %li= link_to "ユーザー設定", edit_user_registration_path
            %li= link_to "ログアウト", destroy_user_session_path
          - else
            %li= link_to "ユーザー登録", new_user_registration_path
            %li= link_to "ログイン", new_user_session_path
    .container
      - flash.each do |message_type, message|
        = content_tag :div, message, class: "alert alert-#{message_type}"
      = yield
