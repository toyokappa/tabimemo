%h1= @plan.name
%p= @plan.description
- if @plan.user == current_user
  = link_to t("link.edit"), edit_plan_path(@plan), class: "btn btn-success"
  = link_to t("link.delete"), @plan, method: :delete, data: { confirm: t("view.delete_confirm") }, class: "btn btn-danger"
- @plan.spots.each do |spot|
  .jumbotron
    %h2= spot.name
    - if spot.photos.any?
      %ul.image-area
        - spot.photos.each do |photo|
          %li= image_tag photo.thumb.url
    = spot.description
