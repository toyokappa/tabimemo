.row.flex
  - plans.each do |plan|
    .plan-item{ class: "#{size == "sm" ? "col-lg-4 col-md-6 col-xs-12" : "col-lg-3 col-md-4 col-xs-6"}" }
      = link_to plan do
        .plan-image
          - photo = plan.spots.map { |spot| spot.photos }.flatten.first
          = image_tag photo.present? ? photo.image.thumb.url : "no_plan_image.png"
        %h3.plan-name= plan.name
        .plan-description= plan.description
        .plan-reactions
          .plan-pageviews
            = fa_icon "eye"
            - pv = plan.show_pv + plan.page_views.sum(:count)
            = pv
          .plan-like
            = fa_icon "heart-o"
            = plan.likes.count
          .plan-comment
            = fa_icon "comment-o"
            = plan.comments.count
