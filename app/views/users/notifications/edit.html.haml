.container
  .row
    .col-md-3
      .menu-bar
        = render "shared/menu_bar"
    .col-md-6
      .register-form
        %h3= Notification.model_name.human
        .form-description
          = t(".form_description")
        = simple_form_for @notification, url: users_notification_path do |f|
          = f.input :when_like
          = f.input :when_comment
          = f.input :when_follow
          = f.input :when_news
          = f.button :submit, class: "btn-success btn-100"
