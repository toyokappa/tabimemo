= simple_form_for @profile, url: users_profile_path do |f|
  .image-field
    = f.input :image, as: :image_preview, input_html: { class: "images", preview_version: :thumb }
  = f.input :name, hint: t("form.profile_name_hint", user_name: @profile.user.name)
  = f.input :description, input_html: { rows: 4 }
  = f.input :location, placeholder: "#{t('view.example')}#{t('.location_example')}"
  = f.input :url, placeholder: "#{t('view.example')}#{root_url}"
  = f.input :gender, include_blank: t("form.select_item", item: Profile.human_attribute_name(:gender)), class: "form-control"
  = f.input :birthday, use_month_numbers: true,
            start_year: Date.today.year,
            end_year: Date.today.year - 110,
            prompt: ["年", "月", "日"],
            input_html: { class: "profile-birthday" }
  = f.button :submit, class: "btn-success btn-100"
